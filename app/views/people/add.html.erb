<h1>ユーザ登録</h1>
<p class="error_message"><%= @msg %></p>
<div class="form1">
<table>
    <%= form_for(@person, url: { controller: "people", action: "create" }) do |form| %>
    <tr>
        <th>Name</th>
            <td><%= form.text_field :name, id: "name", :size => "20" %></td>
    </tr>
    <tr>
        <th>Age</th>
            <td><%= form.text_field :age, id: "age", :size => "3" %></td>
    </tr>
    <tr>
        <th>email</th>
            <td><%= form.text_field :email, id: "email", :size => "30" %></td>
    </tr>
    <tr>
        <th>password</th>
            <td><%= form.text_field :password, id: "password", :size => "30" %></td>
    </tr>
        <%= form.submit "登録", class: "button" %>
    <% end %>

</table>
</div>