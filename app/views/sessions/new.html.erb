<h1>ログイン</h1>

<div class="flash">
  <%= flash[:notice] %>
</div>

<div class="connect-login">
  <label class="ef">
    <%= form_for(:session, url: login_path) do |f| %>
    <dl>
      <dt><%= f.label :email %></dt>
        <dd><%= f.email_field :email, id: "email" %></dd>
      <dt><%= f.label :password %></dt>
        <dd><%= f.password_field :password, id: "password" %></dd>
    </dl>
  </label>
</div>
<div class="btnWrap">

  <%= f.submit "ログイン", class: "btn", id: "logout-button" %>

</div>
    <% end %>
